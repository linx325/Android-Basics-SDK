<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBarView">
        <attr name="tbv_title" format="string" />
        <attr name="tbv_title_color" format="reference|color" />
        <attr name="tbv_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="tbv_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="tbv_image_left" format="reference" />
        <attr name="tbv_image_right" format="reference" />
        <attr name="tbv_isShowLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="EmptyLayout">
        <attr name="empty_tip" format="string" />
        <attr name="empty_image" format="reference" />
    </declare-styleable>

    <declare-styleable name="BubbleLayout">
        <attr name="bubble_background_color" format="color" />
        <attr name="bubble_shadow_color" format="color" />
        <attr name="bubble_shadow_size" format="dimension" />
        <attr name="bubble_radius" format="dimension" />
        <attr name="bubble_direction" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="offset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MeterProgressBar">
        <!--进度最大值-->
        <attr name="mpb_max" format="integer" />
        <!--进度值-->
        <attr name="mpb_progress" format="integer" />
        <!--进度条类型 circle:圆形 line:线形-->
        <attr name="mpb_mode" format="integer">
            <enum name="line" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <!--圆形进度条最小进度时的角度位置：从圆环最右侧的点开始，顺时针旋转的角度-->
        <attr name="mpb_circle_start" format="integer" />
        <!--圆形进度条最大进度时的角度位置：从圆环最右侧的点开始，顺时针旋转的角度-->
        <attr name="mpb_circle_end" format="integer" />
        <!--圆形进度条圆环宽度-->
        <attr name="mpb_circle_width" format="dimension" />
        <!--进度条底色渐变开关-->
        <attr name="mpb_gradient" format="boolean" />
        <!--进度条底色渐变开始颜色 渐变开启时生效-->
        <attr name="mpb_gradient_start_color" format="color|reference" />
        <!--进度条底色渐变结束颜色 渐变开启时生效-->
        <attr name="mpb_gradient_end_color" format="color|reference" />
        <!--进度条底色渐变色方向 渐变开启时生效-->
        <attr name="mpb_gradient_orientation" format="integer">
            <!-- 进度由小到大的方向进行渐变 -->
            <enum name="horizontal" value="0" />
            <!-- 进度相同时宽度上进行渐变 -->
            <enum name="vertical" value="1" />
        </attr>
        <!--进度颜色-->
        <attr name="mpb_progress_color" format="color|reference" />
        <!--进度底色 渐变关闭时生效-->
        <attr name="mpb_background" format="color|reference" />
    </declare-styleable>

</resources>